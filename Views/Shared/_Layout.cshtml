<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PatiYuva</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PatiYuva.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-gradient-custom shadow-lg">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center text-white fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="navbar-icon me-2">🐾</span>
                    <span class="text-white">PatiYuva</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebarDrawer" aria-controls="sidebarDrawer" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-nav ms-auto">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-white fw-medium px-3 py-2" asp-area="" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white fw-medium px-3 py-2" asp-area="" asp-controller="Animals" asp-action="Index">Hayvanlar</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole("Sahip"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white fw-medium px-3 py-2" asp-area="" asp-controller="Animals" asp-action="Create">Hayvan Ekle</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white fw-medium px-3 py-2" asp-area="" asp-controller="Donation" asp-action="MyDonations">Bağışlar</a>
                                </li>
                            }
                            @if (User.IsInRole("Sahiplenici"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white fw-medium px-3 py-2" asp-area="" asp-controller="Donation" asp-action="MyDonations">Yaptığım Bağışlar</a>
                                </li>
                            }
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    
    <!-- Sidebar Drawer -->
    <div class="offcanvas offcanvas-start" tabindex="-1" id="sidebarDrawer" aria-labelledby="sidebarDrawerLabel">
        <div class="offcanvas-header bg-gradient-custom">
            <h5 class="offcanvas-title text-white" id="sidebarDrawerLabel">Menü</h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="fas fa-home me-2"></i> Ana Sayfa
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Animals" asp-action="Index">
                        <i class="fas fa-paw me-2"></i> Hayvanlar
                    </a>
                </li>
                @if (User.Identity.IsAuthenticated)
                {
                    @if (User.IsInRole("Sahip"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Animals" asp-action="Create">
                                <i class="fas fa-plus-circle me-2"></i> Hayvan Ekle
                            </a>
                        </li>
                    }
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Donation" asp-action="Index">
                            <i class="fas fa-donate me-2"></i> Bağışlar
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-light">
        <div class="container text-center py-3">
            &copy; 2025 - PatiYuva - Sevimli Dostlarınızın Buluşma Noktası
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
